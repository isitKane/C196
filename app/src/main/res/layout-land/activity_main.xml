<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.MainActivity">

    <TextView
        android:id="@+id/homeText"
        android:layout_width="94dp"
        android:layout_height="48dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="137dp"
        android:layout_marginBottom="86dp"
        android:text="Home"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="#003057"
        app:layout_constraintBottom_toTopOf="@+id/buttonTerms"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/wguLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/wguLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="303dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_foreground" />

    <Button
        android:id="@+id/buttonTerms"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#003057"
        android:onClick="buttonTerms"
        android:text="View Terms"
        app:iconTint="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/buttonCourses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wguLogo" />

    <Button
        android:id="@+id/buttonCourses"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="7dp"
        android:backgroundTint="#003057"
        android:onClick="buttonCourses"
        android:text="View Courses"
        app:iconTint="#3F51B5"
        app:layout_constraintBottom_toTopOf="@+id/buttonAssessments"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonTerms" />

    <Button
        android:id="@+id/buttonAssessments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="66dp"
        android:layout_marginBottom="86dp"
        android:backgroundTint="#003057"
        android:onClick="buttonAssessments"
        android:text="View Assessments"
        app:iconTint="#3F51B5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCourses" />

</androidx.constraintlayout.widget.ConstraintLayout>